{
    "name": "kingbase-debug-helper",
    "displayName": "kingBase Debug Helper",
    "description": "Extension to assist Postgres hackers - source code developers",
    "version": "0.0.2",
    "engines": {
        "vscode": "^1.30.0"
    },
    "categories": [
        "Debuggers",
        "Formatters",
        "Other"
    ],
    "icon": "resources/logo.png",
    "activationEvents": [
        "workspaceContains:.vscode/kingbase_debug_helper.json",
        "workspaceContains:**/src/include/cbb/server_cbb/basestruct/kdb_nodes.h"
    ],
    "main": "./out/entrypoint.js",
    "publisher": "TsinghuaLucky912",
    "repository": {
        "type": "git",
        "url": "https://github.com/TsinghuaLucky912/postgres-dev-helper.git"
    },
    "keywords": [
        "kingBase",
        "kingbase",
        "postgres",
        "pgsql",
        "pg",
        "c",
        "pgindent",
        "formatter",
        "format"
    ],
    "contributes": {
        "commands": [
            {
                "command": "kingbase-debug-helper.dumpNodeToLog",
                "title": "Dump Node to stdout",
                "shortTitle": "Dump Node to stdout",
                "category": "PgSQL"
            },
            {
                "command": "kingbase-debug-helper.openConfigurationFile",
                "title": "Open or create configuration file (JSON)",
                "shortTitle": "Open configuration file",
                "category": "PgSQL"
            },
            {
                "command": "kingbase-debug-helper.refreshPostgresVariablesView",
                "title": "Refresh Postgres variables view",
                "shortTitle": "Refresh variables view",
                "category": "PgSQL",
                "icon": "$(refresh)"
            },
            {
                "command": "kingbase-debug-helper.refreshConfigFile",
                "title": "Refresh configuration file",
                "shortTitle": "Refresh config file",
                "category": "PgSQL"
            },
            {
                "command": "kingbase-debug-helper.formatterShowDiff",
                "title": "Show diff preview for kingBase formatter",
                "shortTitle": "Diff kingBase formatter",
                "category": "PgSQL"
            },
            {
                "command": "kingbase-debug-helper.bootstrapExtension",
                "title": "Bootstrap extension",
                "shortTitle": "Bootstrap extension",
                "category": "PgSQL"
            },
            {
                "command": "kingbase-debug-helper.addVariableToWatch",
                "title": "Add Variable to Watch",
                "shortTitle": "Add to Watch",
                "category": "PgSQL"
            }
        ],
        "menus": {
            "debug/variables/context": [
                {
                    "command": "kingbase-debug-helper.dumpNodeToLog",
                    "when": "inDebugMode && debugState == stopped && kingbase-debug-helper:activated"
                }
            ],
            "view/title": [
                {
                    "command": "kingbase-debug-helper.refreshPostgresVariablesView",
                    "group": "navigation",
                    "when": "inDebugMode && debugState == stopped && kingbase-debug-helper:activated"
                }
            ],
            "view/item/context": [
                {
                    "command": "kingbase-debug-helper.addVariableToWatch",
                    "when": "inDebugMode && view == kingbase-debug-helper.node-tree-view"
                }
            ],
            "commandPalette": [
                {
                    "command": "kingbase-debug-helper.dumpNodeToLog",
                    "when": "false"
                },
                {
                    "command": "kingbase-debug-helper.addVariableToWatch",
                    "when": "false"
                },
                {
                    "command": "kingbase-debug-helper.refreshPostgresVariablesView",
                    "group": "navigation",
                    "when": "inDebugMode && debugState == stopped && kingbase-debug-helper:activated"
                }
            ]
        },
        "views": {
            "debug": [
                {
                    "id": "kingbase-debug-helper.node-tree-view",
                    "name": "pg variables",
                    "type": "tree",
                    "visibility": "visible",
                    "when": "inDebugMode && kingbase-debug-helper:activated"
                }
            ]
        },
        "configuration": {
            "title": "kingBase Debug Helper",
            "properties": {
                "kingbase-debug-helper.nodeTagFiles": {
                    "title": "Files with NodeTags",
                    "type": "array",
                    "default": null,
                    "description": "Files, where NodeTag values defined. It will be used to check if variable can have NodeTag.\nCan be either relative or absolute path. Relative paths will be applied with base path of `srcPath` setting"
                },
                "kingbase-debug-helper.logLevel": {
                    "title": "Log level",
                    "type": "string",
                    "enum": [
                        "DEBUG",
                        "INFO",
                        "WARNING",
                        "ERROR",
                        "DISABLE"
                    ],
                    "default": "INFO",
                    "description": "Minimum level of log messages to display in Output view. For VS Code version greater 1.74.0 use log level in Output channel panel"
                },
                "kingbase-debug-helper.pg_bsd_indentPath": {
                    "title": "Path to pg_bsd_indent",
                    "type": "string",
                    "description": "Path to pg_bsd_indent executable used to format file.\nIf not specified, pg_bsd_indent will be search in all available location, and maybe built"
                },
                "kingbase-debug-helper.srcPath": {
                    "title": "Path to root of kingBase source files",
                    "type": "string",
                    "description": "Path to source files of kingBase. Set it if you have sources in separate sub-directory from root of project.\nIf not set search will start in project root directory"
                }
            }
        },
        "jsonValidation": [
            {
                "fileMatch": "kingbase_debug_helper.json",
                "url": "./properties.schema.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "vscode-test",
        "deploy": "vsce publish"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.7",
        "@types/node": "^20.17.28",
        "@types/vscode": "^1.30.0",
        "@typescript-eslint/eslint-plugin": "^7.14.1",
        "@typescript-eslint/parser": "^7.11.0",
        "@vscode/test-cli": "^0.0.9",
        "@vscode/test-electron": "^2.4.0",
        "eslint": "^8.57.0",
        "typescript": "^5.4.5"
    }
}
